root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf


[*.json]
indent_style = space
indent_size = 4

[*.{ts, tsx}]
indent_style = space
indent_size = 2

[*.{html, css}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
indent_size = false

[{.yml,.yaml}]
indent_style=space
